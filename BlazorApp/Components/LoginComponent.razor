@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <div class="flex items-center space-x-4 px-4 py-2">
            <span class="text-gray-100 font-medium truncate">
                Hello, @context.User.Identity?.Name!
            </span>
            <button
                @onclick="BeginSignOut"
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-100 bg-emerald-700 border border-transparent rounded-lg hover:bg-emerald-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-colors duration-200">
                Log out
            </button>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="px-4 py-2">
            <a
                href="authentication/login"
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-emerald-800 bg-gray-100 border border-transparent rounded-lg hover:bg-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-colors duration-200">
                Log in
            </a>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
private async Task BeginSignOut(MouseEventArgs args)
{
Navigation.NavigateToLogout("authentication/logout");
}
}